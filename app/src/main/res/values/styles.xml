<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App_EditTextStyle">
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginLeft">4sp</item>
        <item name="colorAccent">#0057D9</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="App_TextViewBackground">
        <item name="android:background">@drawable/txtview_border</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="Button_Color">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="Table_Settings">
        <item name="android:layout_marginTop">20sp</item>
    </style>

</resources>
